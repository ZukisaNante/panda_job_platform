<!DOCTYPE html>
<html>
  <head>
    <title>Create Employee</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
  
    <div class="container">
      <h3><a  class="btn btn-secondary" href="/employees/index2"><i class="fas fa-th-list"></i>  JOB LIST</a></h3>
      <h1 class="newJob" >Create New Job</h1>
      <form action="/employees/save" method="post" class="was-validated">
        <table class="table table-bordered table-hover">
          <tbody>
            <tr class="m-0">
        
              <td class="w-25"> <label for="validationTooltip04">Job Title</label></td>
              <td class="w-75"><input type="text" name="jobTitle" class="form-control is-valid"   placeholder="Job Title"  required/></td>
            
            </tr>
            <tr class="m-0">
              <td class="25">Job Description</td>
               <!-- <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"  placeholder="Job Description" name="jobDescription" required></textarea> -->
              <td class="75"><textarea class="form-control"   rows="3"  placeholder="Job Description" name="jobDescription" required></textarea></td>
            </tr>
             <tr class="m-0">
              <td class="75">Required Skills</td>
              <td class="25"><textarea class="form-control"   rows="3"  placeholder="Job Skills" name="jobSkills" required></textarea></td>
            </tr>
             <tr class="m-0">
              <td class="25">Required Qualification</td>
              <td class="75"><input type="text" name="jobQualification" class="form-control is-valid"   placeholder="Required Qualifications"  required/></td>
            </tr>
             <tr class="m-0">
              <td class="25">Candidate Profile</td>
              <td class="75"><textarea class="form-control"   rows="3"  placeholder="Candidate Profile" name="jobCandidateProfile" required></textarea></td>
            </tr>
             <tr class="m-0">
              <td class="25">Job Offer</td>
              <td class="75"><textarea class="form-control"   rows="3"  placeholder="Job Offer" name="jobOffer" required></textarea></td>
            </tr>
            <tr class="m-0">
              <td class="25">Company Address</td>
              <td class="75"><input type="text" name="jobAddress" class="form-control is-valid"   placeholder="Company Address"  required/></td>
            </tr>
             <tr class="m-0">
              <td class="25">City</td>
              <td class="75"><input type="text" name="jobCity" class="form-control is-valid"   placeholder="City"  required/></td>
            </tr>
            <tr class="m-0">
              <td class="25">Bruto</td>
              <td class="75"><input type="number" name="jobSalary" class="form-control is-valid"   placeholder="Bruto"  required/></td>
            </tr>
            <tr class="m-0">
              <td colspan="2"><button type="submit" class="btn btn-primary btn-lg btn-block"> <i class="fas fa-save fa-lg"></i> Save</button></td>
            </tr>
          </tbody>
        </table>
      </form>
    </div>
  </body>
</html>

